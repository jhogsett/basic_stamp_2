prestart:

' make slave pin low
DIR14 = 1
OUT14 = 0

' check for high on master pin
DIR15 = 0
IF IN15 = 0 THEN

' if none, this is master
  mode = mastermode

  ' set to listen to slave pin
  DIR14 = 0

  ' make master pin high
  DIR15 = 1
  OUT15 = 1

  ' wait indefinately for high on slave pin
wait_for_slave:
  IF IN14 = 0 THEN wait_for_slave

  ' disable master pin
  OUT15 = 0
  DIR15 = 0

  DEBUG "master",CR
  GOTO start_done

ELSE

  ' if high, this is slave
  mode = slavemode

  ' make slave pin high
  DIR14 = 1
  OUT14 = 1

  ' wait indefinately for low on master pin
wait_for_master:
  IF IN15 = 1 THEN wait_for_master

  ' disable slave pin
  OUT14 = 0
  DIR14 = 0
DEBUG "slave",CR

ENDIF

start_done:

