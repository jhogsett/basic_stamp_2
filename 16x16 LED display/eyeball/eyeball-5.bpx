EyeMove:
IF newx >= x THEN
  dx = (newx - x) / speed
  dirx = 1
ELSE
  dx = (x - newx) / speed
  dirx = 0
ENDIF

IF newy >= y THEN
  dy = (newy - y) / speed
  diry = 1
ELSE
  dy = (y - newy) / speed
  diry = 0
ENDIF

FOR j = 1 TO speed
  IF dirx = 1 THEN
    x = x + dx
  ELSE
    x = x - dx
  ENDIF

  IF diry = 1 THEN
    y = y + dy
  ELSE
    y = y - dy
  ENDIF

  eyex = x.HIGHBYTE
  eyey = y.HIGHBYTE

  GOSUB DoFrameT
NEXT
RETURN






