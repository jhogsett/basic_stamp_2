program DATA 10

        'stading
        DATA Word pat2 '9
        DATA Word pat2y '9

        DATA Word pat2f '10
        DATA Word pat3f '10
        DATA Word pat4c '10
        DATA Word pat4e '10
        DATA Word pat7c '10
        DATA Word pat7e '10
        DATA Word pat7i '10
        DATA Word pat9b '10


        DATA Word pat6 '9
        DATA Word pat7a '9
        DATA Word pat9a '9
        DATA Word pat9c '9

        DATA Word pat2d '8
        DATA Word pat2z '8  try with pause
        DATA Word pat3b '8
        DATA Word pat5c '8
        DATA Word pat7 '8

DIRS = $ffff
OUTS = $0000

i VAR Byte
j VAR Byte
k VAR Byte
w VAR Word
p VAR Word
n VAR Byte

pattern VAR Word

cycle VAR Byte
repeat VAR Byte
delay VAR Byte


main:

READ program, n

FOR k = 0 TO n-1
  READ program + 1 + (k << 1), Word pattern
  'DEBUG DEC program, CR
  GOSUB DoPattern
  PAUSE 100
NEXT
GOTO main







DoPattern:
READ pattern + 0, cycle
READ pattern + 1, repeat
READ pattern + 2, delay
p = pattern + 3
cycle = (cycle - 1) * 2

FOR i = 1 TO repeat
  FOR j = 0 TO cycle STEP 2
    READ p + j, Word w
    OUTS = w
    'DEBUG DEC j, " ", BIN w, CR
  PAUSE delay
  NEXT
NEXT

RETURN